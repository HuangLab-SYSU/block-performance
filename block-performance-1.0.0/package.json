{
    "name": "block-performance",
    "version": "1.0.0",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "build": "tsc --build",
        "watch": "tsc --watch",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "dev": "data_dir=./data node dist/library/x-block-performance-server/run-public/index.js --input-file=customize/start.json",
        "start": "data_dir=./data pm2 start dist/library/x-block-performance-server/run-public/index.js --name block-performance --no-autorestart -- --input-file=customize/start.json --logger-disabled",
        "stop": "pm2 stop block-performance"
    },
    "type": "module",
    "private": true,
    "devDependencies": {
        "@jest/globals": "",
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.5",
        "@types/jest": "^30.0.0",
        "@types/multer": "^2.0.0",
        "@types/prompts": "^2.4.9",
        "@types/semver": "^7.7.1",
        "@types/uuid": "^11.0.0",
        "@types/yargs": "^17.0.32",
        "jest": "^30.2.0",
        "typescript": "^5.8.2"
    },
    "dependencies": {
        "@aws-sdk/client-lightsail": "^3.787.0",
        "axios": "^1.7.2",
        "compression": "^1.8.0",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "multer": "^2.0.2",
        "node-pty": "^1.0.0",
        "pm2": "latest",
        "prettier": "^3.6.2",
        "prompts": "^2.4.2",
        "semver": "^7.7.3",
        "tailwind-merge": "^3.3.1",
        "uuid": "^13.0.0",
        "yargs": "^18.0.0"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "src"
        ]
    }
}